<!-- Sign-Up Style -->

<link rel="stylesheet" href="/css/sign_up.css">

<!-- Sign Up Form Continer-->

<div id="sign-up-container">

    <!-- Sign Up Heading and Logo-->

    <h1>Sign Up!</h1>
    <div id="sign-up-logo-container">
        <img src="/images/logo.png" alt="Site Logo">
    </div>

    <!-- Sign Up Form-->

    <form id="sign-up-form" action="/user/create" method="post">
        <input type="text" id="name" name="name" placeholder="Name">
        <input type="email" id="email" name="email" placeholder="Email">
        <input type="password" id="password" name="password" placeholder="Password">
        <input type="password" id="confirm-password" name="confirm_password" placeholder="Confirm Password">
        <button type="submit">Sign Up</button>
    </form>
    
</div>