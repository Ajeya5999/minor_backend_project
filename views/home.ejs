<!-- Home Style -->

<link rel="stylesheet" href="/css/home.css">

<% if(locals.user) { %> <!-- Only show when user is signed in -->

    <!-- Home Heading -->

    <h1>Ready to get stuff done, <%= locals.user.name %>?</h1>

    <!-- Home To Do Form -->

    <form id="to-do-form" action="/task/create" method="post">

        <!-- Description Container -->

        <div id="description-container">
            <label for="description">description</label>
            <textarea class="to-do-form-input" id="description" name="description" placeholder="What do you needs to do?" required></textarea>
        </div>

        <!-- Category Container -->

        <div id="category-container">
            <label for="category">category</label>
            <select class="to-do-form-input" id="category" name="category" required>
                <option value="School">School</option>
                <option value="Work">Work</option>
                <option value="Excercise">Excercise</option>
                <option value="Home">Home</option>
            </select>
        </div>

        <!-- Due Date Container -->

        <div id="due-date-container">
            <label for="due-date">due date</label>
            <input class="to-do-form-input" type="date" id="due-date" name="dueDate" required>
        </div>

        <!-- Submission Buttons -->

        <div id="submit-buttons-container">
            <button type="submit" id="add-task">
                <i class="fa-sharp fa-solid fa-plus"></i>
                Add Task
            </button>
            <button type="submit" id="delete-tasks" formaction="/asdasd">
                <i class="fa-solid fa-trash"></i>
                Delete Tasks
            </button>
            <button type="submit" id="done" formaction="/asdasd">
                <i class="fa-solid fa-circle-check"></i>
                Done
            </button>
        </div>

        <%- include('_tasks'); -%>

    </form>

<% } else { %> <!-- Tell user to sign in -->
 
    <div id="unauth-container">
        <h1>Please Sign in to Continue</h1>
    </div>

<% } %>